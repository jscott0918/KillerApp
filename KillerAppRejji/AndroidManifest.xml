<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.killerapprejji"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <permission
        android:name="NFC"
        android:permissionGroup="NFC" >
    </permission>

    <application
        android:allowClearUserData="true"
        android:icon="@drawable/ninjahead"
        android:label="@string/app_name"
        android:logo="@drawable/ninjahead"
        android:permission="android.permission.NFC"
        android:persistent="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.killerapprejji.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name="com.killerapprejji.SplashScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.killerapprejji.AttackActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.killerapprejji.SetInfo"
            android:alwaysRetainTaskState="true"
            android:configChanges="keyboard"
            android:description="@string/menu_settings"
            android:icon="@drawable/ninjahead"
            android:label="@drawable/ninjahead"
            android:launchMode="standard"
            android:noHistory="false"
            android:parentActivityName="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.killerapprejji.DisplayInteractions"
            android:label="@string/title_activity_display_interactions"
            android:parentActivityName="com.killerapprejji.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.killerapprejji.MainActivity" />
        </activity>
    </application>

</manifest>